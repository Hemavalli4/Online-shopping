@model IEnumerable<OnlineMVC.Models.CartItems>

@{
    ViewBag.Title = "GetFromCart";
}

<h2>GetFromCart</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            <img src="~/Images/@item.Picture" width="200" height="200" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "EditByProductId", new {  id=item.ProductId  }) |
            @Html.ActionLink("Delete", "DeleteFromCart", new {  id=item.ProductId })
        </td>
    </tr>
}
    <tr>
        <td>
            <form class="form-inline my-2 my-lg-0" method="get" action="GetFromCart">
            </form>
        </td>
    </tr>
</table>
