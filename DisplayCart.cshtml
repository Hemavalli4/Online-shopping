@model IEnumerable<OnlineMVC.Models.CartItems>

@{
    ViewBag.Title = "DisplayCart";
}
<h2>Display Cart</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                <img src="~/Images/@item.Picture" width="200" height="200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditByProductId", new { id = item.ProductId }) |
                    @Html.ActionLink("Delete", "DeleteByProductId", new { id = item.ProductId })
                </td>
            @*<td>@Html.ActionLink("place order","PlaceOrder")</td>*@
        </tr>
    }

</table>
<form method="post" action="GetFromCart"></form>
<hr />
<a href="PlaceOrder" class="btn btn-danger">
    <input type="button" class="btn btn-success" value="place order" />
</a>
<hr />
<a href="Index" class="btn btn-Success">Continue Shopping</a>
